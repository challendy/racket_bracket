!!! Strict
%html
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html;charset=UTF-8" }
    %title Racket Brackets
    = stylesheet_link_tag "application", "bracket"
    = javascript_include_tag :all
    = csrf_meta_tag 

  %body
    #wrapper
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
      #header
        %h1 Racket Brackets
        -if user_signed_in?
          %p.user_login_box
            = "#{current_user.email}"
            |
            = link_to 'My Account', edit_user_registration_path
            |
            = link_to 'Sign out', destroy_user_session_path
      %ul#navigation
        %li
          %a{ :href => "/", :class => "#{active_class('^\/$')}"} Dashboard
        %li
          %a{ :href => "/leagues", :class => "#{active_class('/leagues')}" } League
        %li
          %a{ :href => "/tournaments", :class => "#{active_class('/tournaments')}" } Tournaments

      #content
        = yield
      #footer
        %p Copyright 47Ten Studios &copy; 2011  All rights reserved.


